<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".team.ui.TeamFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_64dp"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_size_22sp"
        android:text="@string/team"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_24dp"
        android:paddingBottom="@dimen/margin_16dp"
        android:fontFamily="@font/ys_display_bold"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_size_32sp"
        android:text="@string/description"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/lead"
        style="@style/developers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lead"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description" />

    <TextView
        android:id="@+id/oldwise"
        style="@style/developers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/oldwise"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lead" />

    <TextView
        android:id="@+id/flash"
        style="@style/developers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flash"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oldwise" />

    <TextView
        android:id="@+id/meister"
        style="@style/developers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meister"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flash" />

    <TextView
        android:id="@+id/bitwise"
        style="@style/developers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bitwise"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/meister" />

</androidx.constraintlayout.widget.ConstraintLayout>