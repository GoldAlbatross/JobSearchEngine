<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".filter.ui.fragments.WorkPlaceFilterFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/filter_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/margin_16dp"
        app:navigationIcon="@drawable/back_btn">

        <TextView
            style="@style/ToolBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/choose_country" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:background="?android:attr/selectableItemBackground"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/county_hint"
            style="@style/FilterLesserTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="@string/country" />

        <TextView
            android:id="@+id/country_text"
            style="@style/FilterGreaterTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/country" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            app:srcCompat="@drawable/leading_icon" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/region_hint"
            style="@style/FilterLesserTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="@string/region" />

        <TextView
            android:id="@+id/region_text"
            style="@style/FilterGreaterTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/region" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            app:srcCompat="@drawable/leading_icon" />
    </androidx.cardview.widget.CardView>
</LinearLayout>